		<paramset type="MASTER" id="hmw_switch_ch_master" address_start="0x0E" address_step="2">
			<parameter id="LOGGING">
				<logical type="option">
					<option id="OFF"/>
					<option id="ON" default="true"/>
				</logical>
				<physical type="integer" size="0.1" interface="eeprom">
					<address index="+0"/>
